{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && webpack",
    "test": "jest --coverage --maxWorkers=4 --silent",
    "test:dev": "jest --maxWorkers=4 --watchAll --silent",
    "test:debug": "jest --maxWorkers=4 --watchAll",
    "lint": "tslint --project tsconfig.json",
    "lintfix": "tslint --project tsconfig.json --fix"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.51",
    "@types/jest": "25.2.3",
    "@types/json-schema": "7.0.4",
    "@types/node": "14.0.5",
    "@types/uuid": "8.0.0",
    "ajv": "6.12.2",
    "aws-sdk": "2.683.0",
    "aws-xray-sdk": "3.0.1",
    "jest": "26.0.1",
    "jest-date-mock": "1.0.8",
    "jest-dot-reporter": "1.0.14",
    "rimraf": "3.0.2",
    "ts-jest": "26.0.0",
    "ts-loader": "7.0.5",
    "tslint": "6.1.2",
    "tslint-config-airbnb": "5.11.2",
    "typescript": "3.9.3",
    "uuid": "8.1.0",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-glob-entry": "2.1.1"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(html|txt)$": "<rootDir>/test/jest-mock.ts",
      "^@foci2020/api/(.+)$": "<rootDir>/src/$1",
      "^@foci2020/shared/(.+)$": "<rootDir>../shared/src/$1"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!src/**/*.index.ts",
      "!src/dependencies.ts",
      "!src/common/unit-testing.ts",
      "!src/common/test-data-factory.ts"
    ],
    "coverageReporters": [
      "html"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "jest-date-mock"
    ]
  }
}
