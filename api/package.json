{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && webpack",
    "test": "jest --coverage --maxWorkers=4 --silent",
    "test:dev": "jest --maxWorkers=4 --watchAll --silent",
    "test:debug": "jest --maxWorkers=4 --watchAll",
    "lint": "tslint --project tsconfig.json",
    "lintfix": "tslint --project tsconfig.json --fix"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.39",
    "@types/jest": "^24.0.23",
    "@types/json-schema": "^7.0.3",
    "@types/node": "^12.12.19",
    "@types/uuid": "^3.4.5",
    "ajv": "^6.10.2",
    "aws-sdk": "^2.591.0",
    "aws-xray-sdk": "^2.5.0",
    "jest": "^24.9.0",
    "jest-date-mock": "^1.0.7",
    "jest-dot-reporter": "^1.0.12",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.7.3",
    "uuid": "^3.3.3",
    "webpack": "^4.41.3",
    "webpack-cli": "^3.3.10",
    "webpack-glob-entry": "^2.1.1"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(html|txt)$": "<rootDir>/test/jest-mock.ts",
      "^@/(.+)$": "<rootDir>/src/$1"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!src/**/*.index.ts",
      "!src/dependencies.ts",
      "!src/common/unit-testing.ts",
      "!src/common/test-data-factory.ts"
    ],
    "coverageReporters": [
      "html"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "jest-date-mock"
    ]
  }
}
