{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "lib": [
      "es2017",
      "es2019"
    ],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "output",
    "baseUrl": ".",
    "paths": {
      "@foci2020/shared/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "**/*.spec.ts"
  ]
}