{
  "name": "foci2020",
  "version": "1.0.0",
  "scripts": {
    "build:api": "cd api && npm run build",
    "samconfig": "cp samconfig.${ENV}.toml samconfig.toml",
    "deploy:local": "export ENV=LOCAL && yarn samconfig && sam deploy -t cf.foci2020.yaml && yarn postdeploy --profile losonczil",
    "deploy:ci": "export ENV=CI && yarn samconfig && sam deploy -t cf.foci2020.yaml && yarn postdeploy --profile ci",
    "postdeploy": "aws lambda invoke --function-name Foci2020-${ENV}-PostDeploy /dev/null",
    "test:dev": "jest --maxWorkers=4 --watchAll --silent",
    "test": "jest --maxWorkers=4 --silent",
    "lint": "eslint . --ext .ts"
  },
  "devDependencies": {
    "@types/jest": "26.0.20",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "eslint": "7.19.0",
    "jest": "26.6.3",
    "jest-date-mock": "1.0.8",
    "jest-dot-reporter": "1.0.14",
    "ts-jest": "26.5.0",
    "typescript": "4.1.3"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@foci2020/api/(.+)$": "<rootDir>/api/src/$1",
      "^@foci2020/shared/(.+)$": "<rootDir>/shared/src/$1"
    },
    "testRegex": "(api|shared)/src/.*\\.spec\\.ts$",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "api/**/*.ts",
      "shared/**/*.ts",
      "!**/node_modules/**",
      "!api/src/**/*.index.ts"
    ],
    "coverageReporters": [
      "html"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "jest-date-mock"
    ]
  }
}