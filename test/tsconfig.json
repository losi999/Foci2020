{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "lib": [
      "es2017",
      "es2019",
      "dom"
    ],
    "types": ["cypress"],
    "noImplicitAny": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "output",
    "baseUrl": ".",
    "paths": {
      "@foci2020/test/*": [
        "src/*"
      ],
      "@foci2020/shared/*": [
        "../shared/src/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}